    <body>
        <form action="/users/login" method="POST">
            <!-- user name input -->
            <div class="">
                <input type="text" id="username" name="username" />
                <label for="username">User name</label>
            </div>

            <!-- Password input -->
            <div class="">
                <input type="password" id="password" name="password" />
